            {/* Decorative Elements */}
            <div class="absolute -top-4 -right-4 w-20 h-20 bg-gradient-to-r from-primary to-secondary rounded-full flex items-center justify-center text-white font-bold shadow-lg animate-bounce">
              <span class="text-2xl">üöÄ</span>
            </div>
            <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-gradient-to-r from-secondary to-primary rounded-full flex items-center justify-center text-white shadow-lg animate-pulse">
              <span class="text-xl">üíª</span>
