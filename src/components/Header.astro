---
const menuItems = [
  { name: 'Home', href: '/' },
  { name: 'Skills', href: '#skills' },
  { name: 'Projekte', href: '#projects' },
  { name: 'Zertifikate', href: '#certificates' },
  { name: 'Kontakt', href: '#contact' },
];
---

<nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-md shadow-sm border-b border-gray-200">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      
      <!-- Logo mit Name -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-10 h-10 rounded-lg bg-gradient-to-r from-primary to-secondary flex items-center justify-center">
          <span class="text-white font-bold text-lg">L</span>
        </div>
        <div>
          <span class="text-xl font-bold text-dark group-hover:text-primary transition-colors">
            Leon Rafael Pichler
          </span>
          <p class="text-xs text-gray-500">Software Engineer</p>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {menuItems.map((item) => (
          <a 
            href={item.href}
            class="text-gray-600 hover:text-primary font-medium transition-colors duration-300 relative group"
          >
            {item.name}
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300"></span>
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden text-gray-600" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
      
    </div>
  </div>
  
  <!-- Mobile Menu (hidden by default) -->
  <div class="md:hidden hidden bg-white border-t border-gray-200" id="mobile-menu">
    <div class="container mx-auto px-4 py-4 space-y-4">
      {menuItems.map((item) => (
        <a 
          href={item.href}
          class="block py-2 text-gray-600 hover:text-primary transition-colors"
        >
          {item.name}
        </a>
      ))}
    </div>
  </div>
</nav>