---
import projects from '../data/projects.json';
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-dark">
      Meine <span class="text-primary">Projekte</span>
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div 
          class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 group"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="h-48 bg-gradient-to-r from-primary/20 to-secondary/20 flex items-center justify-center">
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-dark group-hover:text-primary transition-colors">
              {project.title}
            </h3>
            <p class="text-gray-600 mb-4">{project.description}</p>
            
            <div class="flex flex-wrap gap-2 mb-6">
              {project.technologies.map((tech) => (
                <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                  {tech}
                </span>
              ))}
            </div>
            
            <div class="flex justify-between">
              <a href={project.github} class="text-gray-600 hover:text-primary flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"/>
                </svg>
                Code
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>