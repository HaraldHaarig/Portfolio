---
import skillsData from '../data/skills.json';

const { categories } = skillsData;

const categoryColors = {
  "Languages": "from-blue-600 to-indigo-600",
  "Frontend": "from-green-600 to-emerald-700", 
  "Backend": "from-purple-600 to-pink-700",
  "Tools": "from-orange-600 to-amber-600"
};
---

<section id="skills" class="py-20 bg-gradient-to-b from-white to-gray-50">
  <div class="container mx-auto px-4">
    
    {/* Header */}
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-dark">
        Tech <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">Stack</span>
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Die Technologien und Werkzeuge, mit denen ich t√§glich arbeite
      </p>
    </div>

    {/* Skills Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {categories.map((category, catIndex) => (
        <div 
          class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-shadow duration-500"
          data-aos="fade-up"
          data-aos-delay={catIndex * 100}
        >
          
          {/* Category Header mit dunklerer Schrift */}
          <div class={`bg-gradient-to-r ${categoryColors[category.title as keyof typeof categoryColors] || category.color} p-6`}>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <span class="text-2xl text-white">{category.icon}</span>
                <div>
                  <h3 class="text-xl font-bold text-white">{category.title}</h3>
                  <p class="text-white/90 text-sm">{category.skills.length} Skills</p>
                </div>
              </div>
              <div class="text-white text-3xl opacity-20">
                {category.icon}
              </div>
            </div>
          </div>

          {/* Skills List */}
          <div class="p-6">
            <div class="flex flex-wrap gap-3">
              {category.skills.map((skill, index) => (
                <div 
                  class="flex items-center gap-3 px-4 py-3 bg-gray-50 rounded-lg border border-gray-300 hover:border-primary hover:bg-white hover:shadow-md transition-all duration-300 group"
                  data-aos="zoom-in"
                  data-aos-delay={index * 20}
                >
                  {/* Logo */}
                  <div class="w-8 h-8 flex-shrink-0 bg-white p-1.5 rounded-md">
                    <img 
                      src={skill.logo} 
                      alt={`${skill.name} Logo`}
                      class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                  
                  {/* Name */}
                  <span class="font-medium text-gray-800 text-sm md:text-base group-hover:text-primary transition-colors">
                    {skill.name}
                  </span>
                </div>
              ))}
            </div>
          </div>

        </div>
      ))}
    </div>

    {/* Stats */}
    <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-6" data-aos="fade-up">
      <div class="bg-gradient-to-br from-blue-500 to-blue-700 p-6 rounded-2xl shadow-lg text-center text-white">
        <div class="text-3xl font-bold">{categories.reduce((total, cat) => total + cat.skills.length, 0)}</div>
        <div class="opacity-90">Gesamte Skills</div>
      </div>
      <div class="bg-gradient-to-br from-green-500 to-green-700 p-6 rounded-2xl shadow-lg text-center text-white">
        <div class="text-3xl font-bold">{categories[0]?.skills.length || 0}</div>
        <div class="opacity-90">Programmiersprachen</div>
      </div>
      <div class="bg-gradient-to-br from-purple-500 to-purple-700 p-6 rounded-2xl shadow-lg text-center text-white">
        <div class="text-3xl font-bold">{categories[1]?.skills.length + categories[2]?.skills.length || 0}</div>
        <div class="opacity-90">Frameworks</div>
      </div>
      <div class="bg-gradient-to-br from-orange-500 to-orange-700 p-6 rounded-2xl shadow-lg text-center text-white">
        <div class="text-3xl font-bold">{categories[3]?.skills.length || 0}</div>
        <div class="opacity-90">Tools</div>
      </div>
    </div>

  </div>
</section>